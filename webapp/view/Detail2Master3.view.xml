<mvc:View
    controllerName="sap.ui.demo.fiori2.controller.Detail2Master3"
    xmlns="sap.uxap"
    xmlns:f="sap.f"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:commons="sap.suite.ui.commons"
>
    <f:DynamicPage fitContent="true" >
        <f:title>
            <f:DynamicPageTitle >
              <f:heading>
                <m:Title text="Schedulazioni {detailSched>/numeroOrdineAcquisto} / {detailSched>/codiceClienteMateriale}" />
              </f:heading>
                <f:actions>
            <m:Button
                type="Transparent"
                icon="sap-icon://full-screen"
                press=".handleFullScreen"
                tooltip="Enter Full Screen Mode"
                visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }" />
            <m:Button
                type="Transparent"
                icon="sap-icon://exit-full-screen"
                press=".handleExitFullScreen"
                tooltip="Exit Full Screen Mode"
                visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }" />
            <m:Button
                type="Transparent"
                icon="sap-icon://decline"
                press=".handleClose"
                tooltip="Close column"
                visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }" />
           
        </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        
        <f:content>
          
            <commons:Timeline
                id="idTimeline"
                dateTimePath="{detailSched>/data_spedizione_richiesta_effettiva}"
                enableDoubleSided="true"
                groupBy="{detailSched>/data_spedizione_richiesta_effettiva}"
                growingThreshold="0"
                filterTitle="Schedulazioni"
                sortOldestFirst="true"
                content="{
                  path: 'detailSched>/datiElementoSelect',
                  sorter: {
                      path: 'data_spedizione_richiesta_effettiva',
                      descending: false
                  }
              }"
            >
                <commons:content>
                    <commons:TimelineItem
                        dateTime="Schedulazione: {detailSched>schedulazione}"
                        userName="{detailSched>data_spedizione_richiesta_effettiva}"
                        text="QuantitÃ  da consegnare: {detailSched>quantita_da_consegnare}"
                        icon="sap-icon://shipping-status"
                        
                    />
                </commons:content>
            </commons:Timeline>
 
        </f:content>
    </f:DynamicPage>
</mvc:View>
