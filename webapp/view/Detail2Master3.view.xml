<mvc:View
    controllerName="sap.ui.demo.fiori2.controller.Detail2Master3"
    xmlns="sap.uxap"
    xmlns:f="sap.f"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:commons="sap.suite.ui.commons"
>
    <f:DynamicPage fitContent="true" >
        <f:content>
          
            <commons:Timeline
                id="idTimeline"
                enableDoubleSided="true"
                groupBy="HireDate"
                growingThreshold="0"
                filterTitle="Schedulazioni"
                sortOldestFirst="true"
                content="{detailSched>/datiElementoSelect}"
            >
                <commons:content>
                    <commons:TimelineItem
                        dateTime="{detailSched>data_spedizione_richiesta_effettiva}"
                        title="{detailSched>schedulazione}"
                        userName="{detailSched>id_posizione}"
                        text="QuantitÃ  da consegnare: {detailSched>quantita_da_consegnare}"
                        icon="sap-icon://shipping-status"
                        color="Neutral"
                    />
                </commons:content>
            </commons:Timeline>
 
        </f:content>
    </f:DynamicPage>
</mvc:View>
