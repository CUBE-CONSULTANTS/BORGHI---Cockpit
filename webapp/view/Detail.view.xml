<mvc:View
  controllerName="programmi.consegne.edi.controller.Detail"
  xmlns="sap.uxap"
  xmlns:m="sap.m"
  xmlns:f="sap.f"
  xmlns:ui="sap.ui.table"
  xmlns:form="sap.ui.layout.form"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:viz="sap.viz.ui5.controls"
  xmlns:viz.data="sap.viz.ui5.data"
  xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
  xmlns:layout="sap.ui.layout"
  xmlns:commons="sap.suite.ui.commons"
>
  <ObjectPageLayout
    id="ObjectPageLayout"
    showTitleInHeaderContent="true"
    alwaysShowContentHeader="false"
    preserveHeaderStateOnScroll="false"
    headerContentPinnable="true"
    isChildPage="true"
    upperCaseAnchorBar="false"
  >
    <headerTitle>
      <ObjectPageDynamicHeaderTitle>
        <expandedHeading>
          <m:Title
            text="Cod. Articolo: {detailData>/MATNR}"
            wrapping="true"
            class="sapUiSmallMarginEnd"
          />
        </expandedHeading>
        <snappedHeading>
          <m:FlexBox
            wrap="Wrap"
            fitContainer="true"
            alignItems="Center"
          >
            <m:FlexBox
              wrap="NoWrap"
              fitContainer="true"
              alignItems="Center"
              class="sapUiTinyMarginEnd"
            >
              <m:Title
                text="Cod. Articolo: {detailData>/MATNR}"
                wrapping="true"
              />
            </m:FlexBox>
          </m:FlexBox>
        </snappedHeading>
        <navigationActions>
          <m:OverflowToolbarButton
            type="Emphasized"
            icon="sap-icon://decline"
            press="handleCloseVariazioni"
            tooltip="Close column"
            visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"
          />
        </navigationActions>
      </ObjectPageDynamicHeaderTitle>
    </headerTitle>
    <headerContent>
      <m:FlexBox
        wrap="Wrap"
        fitContainer="true"
        alignItems="Stretch"
      >
        <m:VBox
          justifyContent="Center"
          class="sapUiSmallMarginEnd"
        >
          <m:Label text="Codice Cliente" />
          <m:Text text="{detailData>/CLIENTE}" />
        </m:VBox>
        <m:VBox
          justifyContent="Center"
          class="sapUiSmallMarginEnd"
        >
          <m:Label text="Ragione Sociale" />
          <m:Text text="{detailData>/Name}" />
        </m:VBox>
      </m:FlexBox>
    </headerContent>
    <sections>
      <ObjectPageSection title="Dettaglio Variazioni">
        <subSections>
          <ObjectPageSubSection>
            <blocks>
              <!-- Grafico principale -->
              <m:VBox>
                <commons:ChartContainer
                  id="chartContainer"
                  showFullScreen="false"
                  showPersonalization="false"
                  showLegend="false"
                  showSelectionDetails="false"
                  showLegendButton="false"
                  autoAdjustHeight="false"
                  showZoom="false"
                  personalizationPress="attachPersonalizationPress"
                  contentChange="attachContentChange"
                  title="Variazioni Quantità"
                >
                  <commons:content>
                    <commons:ChartContainerContent
                      icon="sap-icon://line-chart"
                      
                    >
                      <commons:content>
                        <layout:FixFlex
                          id="chartFixFlexzz"
                          minFlexSize="100"
                          fitContainer="true"
                        >
                          <layout:flexContent>
                            <viz:VizFrame
                              id="idVizFrame"
                              uiConfig="{
                                applicationSet: 'fiori'
                              }"
                              vizType="column"
                              width="100%"
                              vizProperties="{
                                plotArea: {
                                  dataLabel: {
                                    visible: true
                                  }
                                },
                                valueAxis: {
                                  title: {
                                    visible: true
                                  }
                                },
                                categoryAxis: {
                                  title: {
                                    visible: true
                                  }
                                },
                                title: {
                                  visible: true,
                                  text: 'Quantità per settimana'
                                }
                              }"
                            >
                              <viz:dataset>
                                <viz.data:FlattenedDataset data="{detailData>/ProductCollection/0/variazioni_quantita/}">
                                  <viz.data:dimensions>
                                    <viz.data:DimensionDefinition
                                      name="Settimane"
                                      value="{detailData>Settimane}"
                                    />
                                  </viz.data:dimensions>
                                  <viz.data:measures>
                                    <viz.data:MeasureDefinition
                                      name="Valore Ricavo"
                                      value="{detailData>ValoreRicavo}"
                                    />
                                  </viz.data:measures>
                                </viz.data:FlattenedDataset>
                              </viz:dataset>
                              <viz:feeds>
                                <viz.feeds:FeedItem
                                  uid="valueAxis"
                                  type="Measure"
                                  values="Valore Ricavo"
                                />
                                <viz.feeds:FeedItem
                                  uid="categoryAxis"
                                  type="Dimension"
                                  values="Settimane"
                                />
                              </viz:feeds>
                            </viz:VizFrame>
                          </layout:flexContent>
                        </layout:FixFlex>
                      </commons:content>
                    </commons:ChartContainerContent>
                  </commons:content>
                </commons:ChartContainer>
                <!-- Fine grafico principale -->
                <!-- Grafico secondario -->
                <commons:ChartContainer
                  id="chartContainerr"
                  showFullScreen="false"
                  showPersonalization="false"
                  showLegend="false"
                  showSelectionDetails="false"
                  showLegendButton="false"
                  autoAdjustHeight="false"
                  showZoom="false"
                  personalizationPress="attachPersonalizationPress"
                  contentChange="attachContentChange"
                  title="Variazioni Percentuali"
                >
                  <commons:content>
                    <commons:ChartContainerContent
                      icon="sap-icon://line-chart"
                      title=""
                    >
                      <commons:content>
                        <layout:FixFlex
                          id="chartFixFlexzzz"
                          minFlexSize="100"
                          fitContainer="true"
                        >
                          <layout:flexContent>
                            <viz:VizFrame
                              id="idVizFramee"
                              uiConfig="{
                                applicationSet: 'fiori'
                              }"
                              vizType="column"
                              width="100%"
                              vizProperties="{
                                plotArea: {
                                  dataLabel: {
                                    visible: true
                                  }
                                },
                                valueAxis: {
                                  title: {
                                    visible: true
                                  }
                                },
                                categoryAxis: {
                                  title: {
                                    visible: true
                                  }
                                },
                                title: {
                                  visible: true,
                                  text: 'Quantità per settimana'
                                }
                              }"
                            >
                              <viz:dataset>
                                <viz.data:FlattenedDataset data="{detailData>/ProductCollection/0/variazioni_percentuali/}">
                                  <viz.data:dimensions>
                                    <viz.data:DimensionDefinition
                                      name="Settimane"
                                      value="{detailData>Settimane}"
                                    />
                                  </viz.data:dimensions>
                                  <viz.data:measures>
                                    <viz.data:MeasureDefinition
                                      name="Valore Ricavo"
                                      value="{detailData>VariazionePercentuale}"
                                    />
                                  </viz.data:measures>
                                </viz.data:FlattenedDataset>
                              </viz:dataset>
                              <viz:feeds>
                                <viz.feeds:FeedItem
                                  uid="valueAxis"
                                  type="Measure"
                                  values="Valore Ricavo"
                                />
                                <viz.feeds:FeedItem
                                  uid="categoryAxis"
                                  type="Dimension"
                                  values="Settimane"
                                />
                              </viz:feeds>
                            </viz:VizFrame>
                          </layout:flexContent>
                        </layout:FixFlex>
                      </commons:content>
                    </commons:ChartContainerContent>
                  </commons:content>
                </commons:ChartContainer>
              </m:VBox>
            </blocks>
          </ObjectPageSubSection>
        </subSections>
      </ObjectPageSection>
    </sections>
    <footer>
      <m:OverflowToolbar>
        <m:ToolbarSpacer />
        <m:Button
          type="Accept"
          text="Save"
        />
        <m:Button
          type="Reject"
          text="Cancel"
        />
      </m:OverflowToolbar>
    </footer>
  </ObjectPageLayout>
</mvc:View>
