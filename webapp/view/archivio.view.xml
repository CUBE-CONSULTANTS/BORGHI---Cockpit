<mvc:View
    controllerName="programmi.consegne.edi.controller.archivio"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:ui="sap.ui.table"
    xmlns:layout="sap.ui.layout"
>
    <f:DynamicPage
        
        fitContent="true"
        toggleHeaderOnTitleClick="false"
        showFooter="true"

    >
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle backgroundDesign="Solid">
                <f:heading>
                    <Title text="Archivio" />
                </f:heading>
                <f:actions>
                  <layout:HorizontalLayout allowWrapping="true">
                    <layout:VerticalLayout>
                      <Image 
                        src="public/images/borghiLogo2.png"
                        height="35.00000000px"
                        width="100%"
                      />
                    </layout:VerticalLayout>
                  </layout:HorizontalLayout>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="false" backgroundDesign="Solid"  >
                <f:content>
                    
                   
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <!-- DynamicPage Content -->
        <f:content>
            <IconTabBar
                id="idIconTabBar"
                select=".onFilterSelect"
                selectedKey="01"
                expandable="false"
            >
                <items>
                    <IconTabFilter
                        class="prova"
                        icon="sap-icon://shipping-status"
                        iconColor="Default"
                        count="{count>/delivery}"
                        text="Delivery Forecast"
                        key="01"
                        
                    >
                        <core:Fragment
                            fragmentName="programmi.consegne.edi.view.fragments.deliveryMaster3"
                            type="XML"
                        />
                    </IconTabFilter>
                    
                    <IconTabFilter
                        icon="sap-icon://time-off"
                        iconColor="Default"
                        count="{count>/calloff}"
                        text="Call-Off"
                        key="02"
                        
                    >
                        <core:Fragment
                            fragmentName="programmi.consegne.edi.view.fragments.calloffMaster3"
                            type="XML"
                        />
                    </IconTabFilter>
                    <IconTabFilter
                        icon="sap-icon://monitor-payments"
                        iconColor="Default"
                        count="{count>/selfbilling}"
                        text="Self Billing"
                        key="03"
                       
                    >
                        <core:Fragment
                            fragmentName="programmi.consegne.edi.view.fragments.selfBillingMaster3"
                            type="XML"
                        />
                    </IconTabFilter>
                    <IconTabFilter
                        icon="sap-icon://letter"
                        iconColor="Default"
                        
                        text="Despatch Advice"
                        key="04"
                        
                    >
                        <core:Fragment fragmentName="programmi.consegne.edi.view.fragments.despatchAdvice"
                    type="XML" />
                    </IconTabFilter>
                    <IconTabFilter
                        icon="sap-icon://sales-order"
                        iconColor="Default"
                        
                        text="Invoice"
                        key="05"
                       
                    >
                        <core:Fragment fragmentName="programmi.consegne.edi.view.fragments.invoice"
                    type="XML" />
                    </IconTabFilter>
                    <IconTabFilter
                    icon="sap-icon://delete"
                    iconColor="Default"
                    count="{count>/fileScartati}"
                    text="File Scartati"
                    key="06"
                    
                    >
                    <core:Fragment fragmentName="programmi.consegne.edi.view.fragments.fileScartati"
                type="XML" />
                </IconTabFilter>
               

                </items>

                <content />
            </IconTabBar>
        </f:content>

        <!-- DynamicPage Footer -->
        <f:footer>
          <core:Fragment
          fragmentName="programmi.consegne.edi.view.fragments.footer"
          type="XML"
      />
        </f:footer>
    </f:DynamicPage>
</mvc:View>
