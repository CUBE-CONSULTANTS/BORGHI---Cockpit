    <!-- DynamicPage Title -->
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="Confronto Variazioni Articolo" />
        </f:heading>
        <f:actions>
          <layout:HorizontalLayout allowWrapping="true">
            <layout:VerticalLayout>
              <Image
                src="public/images/borghiLogo2.png"
                height="35.00000000px"
                width="100%"
              />
            </layout:VerticalLayout>
          </layout:HorizontalLayout>
        </f:actions>
      </f:DynamicPageTitle>
    </f:title>
    <f:header>
      <f:DynamicPageHeader   pinnable="true">
        <f:content>
          <fb:FilterBar
          filterContainerWidth="15rem"
            search="onSearch"
            persistencyKey="myPersKey"
            useToolbar="false"
            showFilterConfiguration="false"
            showGoOnFB="true"
            showClearOnFB="true"
            clear="onFilterBarVariazioniClear"
          >
            <fb:filterGroupItems>
              <fb:FilterGroupItem
                name="Codice Cliente"
                label="Codice Cliente"
                groupName="Group1"
                visibleInFilterBar="true"
              >
                <fb:control>
                  <ComboBox
                    id="idClientiComboBox"
                    name=""
                    items="{
                      path: 'matchcode>/clienti',
                      templateShareable: true
                    }"
                    change="onClientiComboBoxChange"
                  >
                  <core:Item
                  key="{matchcode>Kunnr}"
                  text="{matchcode>Kunnr} - {matchcode>Name1}"
                />
                  </ComboBox>
                </fb:control>
              </fb:FilterGroupItem>
          
              <fb:FilterGroupItem
                name="Codice Articolo Fornitore"
                label="Codice Articolo Fornitore"
                groupName="Group1"
                visibleInFilterBar="true"
              >
                <fb:control>
                  <ComboBox
                  id="idMatComboBox"
                  change="onMaterialiComboBoxChange"
                  name=""
                  items="{
                    path: 'matchcode>/materiali',
                    templateShareable: true
                  }"
                >
                  <core:Item
                    key="{matchcode>Kdmat}"
                    text="{matchcode>Kdmat} - {matchcode>Maktx}"
                  />
                </ComboBox>
                </fb:control>
              </fb:FilterGroupItem>
              <fb:FilterGroupItem
              name="Codice Articolo SAP"
              label="Codice Articolo SAP"
              groupName="Group1"
              visibleInFilterBar="true"
              
            >
              <fb:control>
                <ComboBox
                id="idMatnrComboBox"
                change="onMaterialiSapChange"
                name=""
                items="{
                  path: 'matchcode>/materialiSap',
                  templateShareable: true
                }"
              >
                <core:Item
                  key="{matchcode>Matnr}"
                  text="{matchcode>Matnr} - {matchcode>Maktx}"
                />
              </ComboBox>
              </fb:control>
            </fb:FilterGroupItem>
            </fb:filterGroupItems>
          </fb:FilterBar>
        </f:content>
      </f:DynamicPageHeader>
    </f:header>
