<mvc:View
  controllerName="programmi.consegne.edi.controller.Master2"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:viz="sap.viz.ui5.controls"
  xmlns:viz.data="sap.viz.ui5.data"
  xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
  xmlns:ui="sap.ui.table"
  xmlns:layout="sap.ui.layout"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns:form="sap.ui.layout.form"
>
  <f:DynamicPage
    id="dynamicPageId"
    showFooter="true"
  >
    <!-- Header Title -->
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="Confronto Programmazioni Clienti" />
        </f:heading>
        <f:actions>
          <layout:HorizontalLayout allowWrapping="true">
            <layout:VerticalLayout>
              <Image
                src="public/images/borghiLogo2.png"
                height="35.00000000px"
                width="100%"
              />
            </layout:VerticalLayout>
          </layout:HorizontalLayout>
        </f:actions>
      </f:DynamicPageTitle>
    </f:title>
    <f:header>
      <f:DynamicPageHeader pinnable="true">
        <f:content>
          <fb:FilterBar
            search="onSearch"
            persistencyKey="myPersKey"
            useToolbar="false"
            showFilterConfiguration="false"
            showGoOnFB="true"
            showClearOnFB="true"
            clear="onFilterBarVariazioniClear"
          >
            <fb:filterGroupItems>
              <fb:FilterGroupItem
                name="Codice Cliente"
                label="Codice Cliente"
                groupName="Group1"
                visibleInFilterBar="true"
              >
                <fb:control>
                  <ComboBox
                    id="idClientiComboBox2"
                    name=""
                    items="{
                      path: 'matchcode>/clienti',
                      templateShareable: true
                    }"
                  >
                    <core:Item
                      key="{matchcode>KUNNR}"
                      text="{matchcode>KUNNR} - {matchcode>KUNNR_DESCR}"
                    />
                  </ComboBox>
                </fb:control>
              </fb:FilterGroupItem>
            </fb:filterGroupItems>
          </fb:FilterBar>
        </f:content>
      </f:DynamicPageHeader>
    </f:header>
    <!-- Main Content -->
    <f:content>
      <VBox fitContainer="true" visible="{main>/visibility}">
        <!-- Dettaglio Quantità -->
        <ui:Table 
         id="clienteTable"
        selectionMode="None"
        rows="{variazioneCliente>/}" >
          <ui:extension>
            <OverflowToolbar>
              <Title text="Dettaglio Quantità (per settimana)" />
              <ToolbarSpacer />
              <Button
                text="Esporta excel"
                icon="sap-icon://excel-attachment"
                press="downloadExcelFile"
              />
              <OverflowToolbarButton
                icon="sap-icon://sort"
                text="Sort"
                type="Transparent"
                press=".onSort"
              />
            </OverflowToolbar>
          </ui:extension>
          <ui:columns>
            <ui:Column width="14rem">
              <Label text="Cliente" />
              <ui:template>
                <Text text="{variazioneCliente>CLIENTE} - {variazioneCliente>DESCR}" />
              </ui:template>
            </ui:Column>
            <ui:Column hAlign="Center">
              <Label text="Settimana" />
              <ui:template>
                <Text text="{variazioneCliente>WEEK}" />
              </ui:template>
            </ui:Column>
            <ui:Column hAlign="Center">
              <Label text="Quantità Totale" />
              <ui:template>
                <Text text="{variazioneCliente>QTY_TOT}" />
              </ui:template>
            </ui:Column>
         
            
            <ui:Column hAlign="Center">
              <Label text="Variazione Positiva" />
              <ui:template>
                <Text text="{variazioneCliente>VAR_POS}" />
              </ui:template>
            </ui:Column>
            <ui:Column hAlign="Center">
              <Label text="Variazione (%) Pos" />
              <ui:template>
                <Text text="{variazioneCliente>VAR_PERCPOS}" />
              </ui:template>
            </ui:Column>
            <ui:Column hAlign="Center">
              <Label text="Variazione Negativa" />
              <ui:template>
                <Text text="{variazioneCliente>VAR_NEG}" />
              </ui:template>
            </ui:Column>
            
          <ui:Column hAlign="Center">
            <Label text="Variazione (%) Neg" />
            <ui:template>
              <Text text="{variazioneCliente>VAR_PERCNEG}" />
            </ui:template>
          </ui:Column>
       
            <ui:Column hAlign="Center">
              <Label text="Variazione Totale" />
              <ui:template>
                <Text text="{variazioneCliente>VAR_TOT}" />
              </ui:template>
            </ui:Column>
            
         
            <ui:Column hAlign="Center">
              <Label text="Variazione (%) Tot" />
              <ui:template>
                <Text text="{variazioneCliente>VAR_PERCTOT}" />
              </ui:template>
            </ui:Column>
          </ui:columns>
          
        </ui:Table>
        <!-- Grafici -->
        <VBox>
          <!-- Grafico Quantità Totali -->
          <VBox
            width="100%"
            class="chartContainer"
          >
            <Title
              text="Quantità Totali"
              level="H2"
            />
            <viz:VizFrame
              id="quantitaChart"
              uiConfig="{
                applicationSet: 'fiori'
              }"
              vizType="column"
              width="100%"
              height="400px"
              vizProperties="{
                plotArea: {
                  dataLabel: {
                    visible: true
                  }
                },
                valueAxis: {
                  title: {
                    visible: true
                  }
                },
                categoryAxis: {
                  title: {
                    visible: true
                  }
                },
                title: {
                  visible: false,
                  text: ''
                }
              }"
            >
              <viz:dataset>
                <viz.data:FlattenedDataset data="{variazioneCliente>/}">
                  <viz.data:dimensions>
                    <viz.data:DimensionDefinition
                      name="Settimana"
                      value="{variazioneCliente>WEEK}"
                    />
                  </viz.data:dimensions>
                  <viz.data:measures>
                    <viz.data:MeasureDefinition
                      name="Quantità Totale"
                      value="{variazioneCliente>QTY_TOT}"
                    />
                  </viz.data:measures>
                </viz.data:FlattenedDataset>
              </viz:dataset>
              <viz:feeds>
                <viz.feeds:FeedItem
                  uid="valueAxis"
                  type="Measure"
                  values="Quantità Totale"
                />
                <viz.feeds:FeedItem
                  uid="categoryAxis"
                  type="Dimension"
                  values="Settimana"
                />
              </viz:feeds>
            </viz:VizFrame>
          </VBox>
          <!-- Grafico Variazioni Positive e Negative -->

          <VBox
            width="100%"
            class="chartContainer"
          >
            <Title
              text="Variazioni Positive e Negative"
              level="H2"
            />
            <viz:VizFrame
              id="variazioniChart"
              uiConfig="{
                applicationSet: 'fiori'
              }"
              vizType="column"
              width="100%"
              height="400px"
              vizProperties="{
                plotArea: {
                  dataLabel: {
                    visible: true
                  }
                },
                valueAxis: {
                  title: {
                    visible: true
                  }
                },
                categoryAxis: {
                  title: {
                    visible: true
                  }
                },
                title: {
                  visible: false,
                  text: ''
                }
              }"
            >
              <viz:dataset>
                <viz.data:FlattenedDataset data="{variazioneCliente>/}">
                  <viz.data:dimensions>
                    <viz.data:DimensionDefinition
                      name="Settimana"
                      value="{variazioneCliente>WEEK}"
                    />
                  </viz.data:dimensions>
                  <viz.data:measures>
                    <viz.data:MeasureDefinition
                      name="Variazione Positiva"
                      value="{variazioneCliente>VAR_POS}"
                    />
                    <viz.data:MeasureDefinition
                      name="Variazione Negativa"
                      value="{variazioneCliente>VAR_NEG}"
                    />
                  </viz.data:measures>
                </viz.data:FlattenedDataset>
              </viz:dataset>
              <viz:feeds>
                <viz.feeds:FeedItem
                  uid="valueAxis"
                  type="Measure"
                  values="Variazione Positiva"
                />
                <viz.feeds:FeedItem
                  uid="valueAxis"
                  type="Measure"
                  values="Variazione Negativa"
                />
                <viz.feeds:FeedItem
                  uid="categoryAxis"
                  type="Dimension"
                  values="Settimana"
                />
              </viz:feeds>
            </viz:VizFrame>
          </VBox>




          <!-- Grafico Variazione Percentuale -->
          <VBox
            width="100%"
            class="chartContainer"
          >
            <Title
              text="Variazione Percentuale (%)"
              level="H2"
            />
            <viz:VizFrame
              id="percentualeChart"
              uiConfig="{
                applicationSet: 'fiori'
              }"
              vizType="column"
              width="100%"
              height="400px"
              vizProperties="{
                plotArea: {
                  dataLabel: {
                    visible: true
                  }
                },
                valueAxis: {
                  title: {
                    visible: true
                  }
                },
                categoryAxis: {
                  title: {
                    visible: true
                  }
                },
                title: {
                  visible: false,
                  text: ''
                }
              }"
            >
              <viz:dataset>
                <viz.data:FlattenedDataset data="{variazioneCliente>/}">
                  <viz.data:dimensions>
                    <viz.data:DimensionDefinition
                      name="Settimana"
                      value="{variazioneCliente>WEEK}"
                    />
                  </viz.data:dimensions>
                  <viz.data:measures>
                    <viz.data:MeasureDefinition
                      name="Variazione % Positiva"
                      value="{variazioneCliente>percPos}"
                    />
                    <viz.data:MeasureDefinition
                      name="Variazione % Negativa"
                      value="{variazioneCliente>percNeg}"
                    />
                  </viz.data:measures>
                </viz.data:FlattenedDataset>
              </viz:dataset>
              <viz:feeds>
                <viz.feeds:FeedItem
                  uid="valueAxis"
                  type="Measure"
                  values="Variazione % Positiva"
                />
                <viz.feeds:FeedItem
                  uid="valueAxis"
                  type="Measure"
                  values="Variazione % Negativa"
                />
                <viz.feeds:FeedItem
                  uid="categoryAxis"
                  type="Dimension"
                  values="Settimana"
                />
              </viz:feeds>
            </viz:VizFrame>
          </VBox>
        </VBox>
      </VBox>
    </f:content>
    <f:footer>
      <core:Fragment
        fragmentName="programmi.consegne.edi.view.fragments.footer"
        type="XML"
      />
    </f:footer>
  </f:DynamicPage>
</mvc:View>
