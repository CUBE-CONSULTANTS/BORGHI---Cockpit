<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.f"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns:ui="sap.ui.table"
  xmlns:mvc="sap.ui.core.mvc"
>
  <fb:FilterBar
    id="filterbar"
    persistencyKey="myPersKey"
    useToolbar="false"
    search=".onSearchData"
    showFilterConfiguration="false"
    showGoOnFB="true"
    showClearOnFB="true"
    clear="onFilterBarClear"
    filterContainerWidth="20rem"
    class="sapUiSmallMarginBottom"
  >
    <fb:filterGroupItems>
      <fb:FilterGroupItem
        name="Data ricezione"
        label="Data ricezione"
        groupName="Group1"
        visibleInFilterBar="true"
      >
        <fb:control>
          <DatePicker
            tooltip="Data di ricezione"
            secondaryCalendarType="Gregorian"
            change="handleChange"
            value="{filtersModel>/delivery/dataRic}" 
            valueFormat="dd/MM/yyyy"
            displayFormat="dd/MM/yyyy"
          />
        </fb:control>
      </fb:FilterGroupItem>
      <fb:FilterGroupItem
        name="Numero progressivo invio"
        label="Numero progressivo invio"
        groupName="Group1"
        visibleInFilterBar="true"
      >
     <fb:control>
      <ComboBox 
        items="{filtersModel>/delivery/numProg/items}" 
        value="{filtersModel>/delivery/numProg/value}">
        <core:ListItem key="{filtersModel>Key}" text="{filtersModel>Text}" />
        </ComboBox>
     </fb:control>
      </fb:FilterGroupItem>
     
      <fb:FilterGroupItem
        name="Cliente"
        label="Cliente"
        groupName="Group1"
        visibleInFilterBar="true"
      >
        <fb:control>

        <ComboBox 
            items="{filtersModel>/delivery/cliente/items}" 
            value="{filtersModel>/delivery/cliente/value}">
            <core:ListItem key="{filtersModel>Key}" text="{filtersModel>Text}" />
        </ComboBox>

     </fb:control>
      </fb:FilterGroupItem>
      <fb:FilterGroupItem
        name="Materiale"
        label="Materiale"
        groupName="Group1"
        visibleInFilterBar="true"
      >
        <fb:control>
          <ComboBox 
          items="{filtersModel>/delivery/materiale/items}" 
          value="{filtersModel>/delivery/materiale/value}">
          <core:ListItem key="{filtersModel>Key}" text="{filtersModel>Text}" />
      </ComboBox>
        </fb:control>
      </fb:FilterGroupItem>
      <fb:FilterGroupItem
        name="Stato"
        label="Stato"
        groupName="Group1"
        visibleInFilterBar="{=${datiAppoggio>/currentPage} === 'archivio' ? false:true}"
      >
        <fb:control>
          <ComboBox 
          items="{filtersModel>/delivery/stato/items}" 
          value="{filtersModel>/delivery/stato/value}">
          <core:ListItem key="{filtersModel>Key}" text="{filtersModel>Text}" />
      </ComboBox>
        </fb:control>
      </fb:FilterGroupItem>
      <fb:FilterGroupItem
        name="Messaggio"
        label="Messaggio"
        groupName="Group1"
        visibleInFilterBar="{=${datiAppoggio>/currentPage} === 'archivio' ? false:true}"

      >
        <fb:control>
          <ComboBox 
          items="{filtersModel>/delivery/messaggio/items}" 
          value="{filtersModel>/delivery/messaggio/value}">
          <core:ListItem key="{filtersModel>Key}" text="{filtersModel>Text}" />
      </ComboBox>
        </fb:control>
      </fb:FilterGroupItem>
    </fb:filterGroupItems>
  </fb:FilterBar>
  <ui:TreeTable
    id="treetableMain"
    rows="{
      path: 'master3>/',
      parameters: {
        arrayNames: ['posizioni']
      }
    }"
    selectionMode="MultiToggle" 
    enableSelectAll="false"
    ariaLabelledBy="title"
    selectionBehavior="Row"
  >

    <ui:extension>
      <OverflowToolbar style="Clear">
        <Title />
        <ToolbarSpacer />
        <Button
          text="Espandi tutti"
          icon="sap-icon://expand-all"
          press="onExpandFirstLevel"
        />
        <Button
          icon="sap-icon://collapse-all"
          text="Collassa tutti"
          press="onCollapseAll"
        />
       
        <Button
          icon="sap-icon://sort"
          text="Ordinamento"
          press="sortCategories"
        />
        
        <Button
          text="Esporta excel"
          icon="sap-icon://excel-attachment"
          press="downloadExcelFile"
          visible="{=${datiAppoggio>/currentPage} === 'archivio' ? false:true}"
        />
        <Button icon="sap-icon://upload"
        type="Emphasized"
        text="Caricamento Manuale"
        press="importaPress"
        visible="{=${datiAppoggio>/currentPage} === 'archivio' ? false:true}" />
        <Button
          text="Elabora"
          icon="sap-icon://process"
          press="onProcessaButton"
          type="Emphasized"
          visible="{=${datiAppoggio>/currentPage} === 'archivio' ? false:true}"
        />
        <Button
          text="Elimina"
          icon="sap-icon://delete"
          press="onDeletePosition"
          type="Reject"
          visible="{=${datiAppoggio>/currentPage} === 'archivio' ? false:true}"
        />
      </OverflowToolbar>
    </ui:extension>
    <ui:columns>
      <ui:Column
        hAlign="Center"
        tooltip="Template"
        width="4.5rem"
      >
        <Label text=" " />
        <ui:template>
          <!-- <Button icon="{=${master3>DelforTestata/template} === 'MAN' ? 'sap-icon://attachment' : 'sap-icon://cloud'}"></Button> -->
          <core:Icon
            src="{=${master3>master/template} === 'LOCALE' ? 'sap-icon://attachment' : 'sap-icon://cloud'}"
            visible="{= ${master3>numero_progressivo_invio} ? true : false}"
            size="1rem"
            tooltip="{=${master3>master/template} === 'LOCALE' ? 'Caricamento manuale' : 'Caricamento in cloud'}"
          />
        </ui:template>
      </ui:Column>
      <ui:Column
        width="11rem"
        tooltip="Cliente"
      >
        <Label text="Cliente" />
        <ui:template>
          <Text text="{master3>codice_cliente}" />
        </ui:template>
      </ui:Column>
      <ui:Column
        width="11rem"
        tooltip="Numero progressivo invio"
      >
        <Label text="N. prog. invio" />
        <ui:template>
          <ObjectIdentifier title="{master3>numero_progressivo_invio}" />
        </ui:template>
      </ui:Column>
      <ui:Column
        width="11rem"
        tooltip="Data ricezione"
      >
        <Label text="Data ricezione" />
        <!-- cambio binding -->
        <ui:template>
          <DatePicker
            editable="false"
            visible="{= ${master3>master/data_ricezione} ? true : false}"
            value="{
              path: 'master3>master/data_ricezione',
              type: 'sap.ui.model.type.Date',
              formatOptions: {
                pattern: 'dd/MM/yyyy'
              }
            }"
            valueFormat="dd/MM/yyyy"
            displayFormat="dd/MM/yyyy"
          />

        </ui:template>
      </ui:Column>
     
      <!-- posizioni -->
      <ui:Column
        width="11rem"
        tooltip="Codice Materiale"
      >
        <Label text="Codice Mat." />
        <ui:template>
          <ObjectIdentifier
            title="{master3>codice_cliente_materiale}"
            text="{master3>descrizione_materiale}"
          />
        </ui:template>
      </ui:Column>
      <ui:Column
        width="11rem"
        tooltip="Numero Ordine Acquisto"
      >
        <Label text="N. Ordine Acquisto" />
        <ui:template>
          <ObjectIdentifier title="{master3>numero_ordine_acquisto}" />
        </ui:template>
      </ui:Column>
      <ui:Column
        width="11rem"
        tooltip="Numero IDoc"
      >
        <Label text="N. IDoc" />
        <ui:template>
          <ObjectIdentifier title="{master3>numero_idoc}" />
        </ui:template>
      </ui:Column>
      <ui:Column
        width="4rem"
        hAlign="Center"
        tooltip="Stato"
        visible="{=${datiAppoggio>/currentPage} === 'archivio' ? false:true}"
      >
        <Label text="Stato" />
        <ui:template>
          
          <Button
            visible="{= ${master3>numero_progressivo_invio} ? false : true}"
            icon="{= ${master3>stato} === '53' ? 'sap-icon://status-positive' : ${master3>stato} === '51' ? 'sap-icon://status-negative' : 'sap-icon://in-progress'}"
            type="{= ${master3>stato} === '53' ? 'Accept' : ${master3>stato} === '51' ? 'Negative' : 'Ghost'}"
            tooltip="{master3>stato}"
           
            press="statoButtonPress"
          />
          <!-- enabled="{= ${master3>stato} === ''}" -->
          <!-- <Button text="{master3>template}"></Button> -->
          <!-- <Text text="X"/> -->
        </ui:template>
      </ui:Column>
      <ui:Column
        width="9rem"
        hAlign="Center"
        tooltip="Dettaglio"
      >
        <ui:template>
          <HBox >
            <!-- confronto programmazione cliente x testata master2 / confronto programmazione materiale master 1-->
            <Button
              icon="sap-icon://display"
              type="Emphasized"
              press="dettaglioNav"
              tooltip="{= ${master3>numero_progressivo_invio} ? 'Dettaglio posizioni' : 'Dettaglio schedulazioni'}"
            />
            <Button
              icon="sap-icon://commission-check"
              type="Emphasized"
              class="sapUiTinyMarginBegin"
              press="navToAPP"
              tooltip="{= ${master3>numero_progressivo_invio} ? 'Confronto Programmazione Cliente' : 'Confronto Programmazione Materiale'}"
            />
            <Button
              icon="sap-icon://download"
              tooltip="Dowload file edi"
              
              class="sapUiTinyMarginBegin"
              press="downloadEdi"
              visible="{=${master3>master/template} !== 'LOCALE'  &amp;&amp; ${master3>numero_progressivo_invio} ? true : false}"
            />
            <Button
              tooltip="Report Cumulativi"
              icon="sap-icon://excel-attachment"
              press="onDownloadCumulativi"
              class="sapUiTinyMarginBegin"
              type="Emphasized"
              visible="{=${datiAppoggio>/currentPage} === 'archivio' &amp;&amp; !${master3>numero_progressivo_invio} ? true:false}"
              />
          </HBox>
        </ui:template>
      </ui:Column>
      <ui:Column
      width="11rem"
      tooltip="Data Val Programma da"
    >
      <Label text="Data Val Programma da:" />
      <!-- cambio binding -->
      <ui:template>
        <DatePicker
          editable="false"
          visible="{= ${master3>data_validita_programma_da} ? true : false}"
          value="{
            path: 'master3>data_validita_programma_da',
            type: 'sap.ui.model.type.Date',
            formatOptions: {
              pattern: 'dd/MM/yyyy'
            }
          }"
          valueFormat="dd/MM/yyyy"
          displayFormat="dd/MM/yyyy"
        />

      </ui:template>
    </ui:Column>
    <ui:Column
    width="11rem"
    tooltip="Data Val Programma a"
  >
    <Label text="Data Val Programma a:" />
    <!-- cambio binding -->
    <ui:template>
      <DatePicker
        editable="false"
        visible="{= ${master3>data_validita_programma_a} ? true : false}"
        value="{
          path: 'master3>data_validita_programma_a',
          type: 'sap.ui.model.type.Date',
          formatOptions: {
            pattern: 'dd/MM/yyyy'
          }
        }"
        valueFormat="dd/MM/yyyy"
        displayFormat="dd/MM/yyyy"
      />

    </ui:template>
  </ui:Column>
    </ui:columns>
  </ui:TreeTable>
</core:FragmentDefinition>