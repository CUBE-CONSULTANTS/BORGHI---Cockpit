<core:FragmentDefinition   xmlns="sap.m"
xmlns:core="sap.ui.core"
xmlns:f="sap.f"
xmlns:fb="sap.ui.comp.filterbar"
xmlns:ui="sap.ui.table"
xmlns:mvc="sap.ui.core.mvc">
<fb:FilterBar        
useToolbar="false"
search=".onSearchData"
showFilterConfiguration="false"
showGoOnFB="true"
showClearOnFB="true"
clear="onFilterBarClear"
filterContainerWidth="20rem"
class="sapUiSmallMarginBottom"
>
<fb:filterGroupItems>
  <fb:FilterGroupItem
        name="Num iDoc"
        label="Num iDoc"
        groupName="gr1"
        visibleInFilterBar="true"
    >
        <fb:control>
          <ComboBox 
          items="{filtersModel>/invoice/numiDoc/items}" 
          value="{filtersModel>/invoice/numiDoc/value}">
          <core:ListItem key="{filtersModel>Key}" text="{filtersModel>Text}" />
          </ComboBox>
        </fb:control>
    </fb:FilterGroupItem>
    <fb:FilterGroupItem
        name="Num Fattura di Vendita"
        label="Num Fattura di Vendita"
        groupName="gr1"
        visibleInFilterBar="true"
    > 
        <fb:control>
          <ComboBox 
          items="{filtersModel>/invoice/numFattVend/items}" 
          value="{filtersModel>/invoice/numFattVend/value}">
          <core:ListItem key="{filtersModel>Key}" text="{filtersModel>Text}" />
          </ComboBox>
        </fb:control>
    </fb:FilterGroupItem>
    <fb:FilterGroupItem
    name="Data Fattura"
    label="Data Fattura"
    groupName="gr1"
    visibleInFilterBar="true"
>
    <fb:control>
      <DatePicker
      tooltip="Data DDT"
      secondaryCalendarType="Gregorian"
      change="handleChange"
      value="{filtersModel>/invoice/dataFattura}" 
      valueFormat="dd/MM/yyyy"
      displayFormat="dd/MM/yyyy"
    />
    </fb:control>
</fb:FilterGroupItem> 
    <fb:FilterGroupItem
        name="Num Doc Contabile"
        label="Num Doc Contabile"
        groupName="gr2"
        visibleInFilterBar="true"
    >
        <fb:control>
          <ComboBox 
          items="{filtersModel>/invoice/numDocCont/items}" 
          value="{filtersModel>/invoice/numDocCont/value}">
          <core:ListItem key="{filtersModel>Key}" text="{filtersModel>Text}" />
          </ComboBox>
        </fb:control>
    </fb:FilterGroupItem>
    <fb:FilterGroupItem
    name="BP"
    label="BP"
    groupName="gr1"
    visibleInFilterBar="true"
>
    <fb:control>
      <ComboBox 
      items="{filtersModel>/invoice/bp/items}" 
      value="{filtersModel>/invoice/bp/value}">
      <core:ListItem key="{filtersModel>Key}" text="{filtersModel>Text}" />
      </ComboBox>
    </fb:control>
</fb:FilterGroupItem>

    <fb:FilterGroupItem
        name="Data Creazione Doc Contabile"
        label="Data Creazione Doc"
        groupName="gr1"
        visibleInFilterBar="true"
    >
        <fb:control>
          <DatePicker
          tooltip="Data DDT"
          secondaryCalendarType="Gregorian"
          change="handleChange"
          value="{filtersModel>/invoice/dataDocCont}" 
          valueFormat="dd/MM/yyyy"
          displayFormat="dd/MM/yyyy"
        />
        </fb:control>
    </fb:FilterGroupItem>                
</fb:filterGroupItems>
</fb:FilterBar>


<ui:Table
rows="{master3Inv>/}"
selectionMode="MultiToggle"
paste="onPaste"
ariaLabelledBy="title"
id="tableInvoice">
<ui:extension>
  <OverflowToolbar style="Clear">
    <ToolbarSpacer
    />
    <Button
    icon="sap-icon://sort"
    text="Ordinamento"
    press="sortCategories"
  />
  
  <Button
    text="Esporta excel"
    icon="sap-icon://excel-attachment"
    press="downloadExcelFile"
  
  />
    <Button
    text="Archivia"
    icon="sap-icon://bbyd-active-sales"
    press="moveToArchive"
    type="Emphasized"
    visible="{=${datiAppoggio>/currentPage} === 'archivio' ? false:true}"
   
  />
  </OverflowToolbar>
</ui:extension>
<ui:columns>
  <ui:Column width="7rem">
    <Label text="Num iDoc" />
    <ui:template>
      <Text text="{master3Inv>numero_idoc}" wrapping="false" />
    </ui:template>
  </ui:Column>
  
  <ui:Column width="12rem">
    <Label text="Num Fattura Vendita" />
    <ui:template>
      <Text text="{master3Inv>fattura_di_vendita}" wrapping="false" />
    </ui:template>
  </ui:Column>
  <ui:Column width="12rem">
    <Label text="Num. Doc Contabile" />
    <ui:template>
      <Text text="{master3Inv>numero_documento_contabile}" wrapping="false" />
    </ui:template>
  </ui:Column>
  <ui:Column width="9rem">
    <Label text="Data Fattura" />
    <ui:template>
      <DatePicker
      editable="false"
      value="{
        path: 'master3Inv>data_di_fatturazione',
        type: 'sap.ui.model.type.Date',
        formatOptions: {
          pattern: 'dd/MM/yyyy'
        }
      }"
      valueFormat="dd/MM/yyyy"
      displayFormat="dd/MM/yyyy"
    />
    </ui:template>
  </ui:Column>
  <ui:Column width="9rem">
    <Label text="Num. DDT" />
    <ui:template>
      <Text text="{master3Inv>num_DDT}" wrapping="false" />
    </ui:template>
  </ui:Column>
  
  <ui:Column width="11rem">
    <Label text="BP" />
    <ui:template>
      <Text text="{master3Inv>BP}" wrapping="false" />
    </ui:template>
  </ui:Column>

  <ui:Column width="15rem">
    <Label text="Data Creazione Doc Contabile" />
    <ui:template>
      <DatePicker
      editable="false"
      value="{
        path: 'master3Inv>data_creazione_doc_contabile',
        type: 'sap.ui.model.type.Date',
        formatOptions: {
          pattern: 'dd/MM/yyyy'
        }
      }"
      valueFormat="dd/MM/yyyy"
      displayFormat="dd/MM/yyyy"
    />
    </ui:template>
  </ui:Column>

  <ui:Column width="11rem">
    <Label text="Stato" />
    <ui:template>
      <Text text="{Name}" wrapping="false" />
    </ui:template>
  </ui:Column>
 
  <ui:Column width="11rem">
    
    <ui:template>
      
    </ui:template>
  </ui:Column>

</ui:columns>
</ui:Table>
</core:FragmentDefinition>
