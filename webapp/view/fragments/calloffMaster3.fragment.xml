<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.f"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns:ui="sap.ui.table"
  xmlns:mvc="sap.ui.core.mvc"
>
    <fb:FilterBar
        id="rthr"
        persistencyKey="myPersKey"
        useToolbar="false"
        search=".onSearchData"
        showFilterConfiguration="false"
        showGoOnFB="true"
        showClearOnFB="true"
        clear="onFilterBarClear"
        class="sapUiSmallMarginBottom"
    >
        <fb:filterGroupItems>
            <fb:FilterGroupItem
                name="Data Ricezione EDI"
                label="Data Ricezione EDI"
                groupName="Group1"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <DatePicker
                        tooltip="Data di ricezione"
                        secondaryCalendarType="Gregorian"
                        change="handleChange"
                        value="{filtersModel>/callOff/dataRic}"
                        valueFormat="dd/MM/yyyy"
                        displayFormat="dd/MM/yyyy"
                    />
                </fb:control>
            </fb:FilterGroupItem>

            <!-- <fb:FilterGroupItem
                name="Nome File"
                label="Nome File"
                groupName="Group1"
                visibleInFilterBar="true"
            >
            <fb:control>
              <ComboBox 
                items="{filtersModel>/callOff/nomeFile/items}" 
                value="{filtersModel>/callOff/nomeFile/value}">
                <core:ListItem key="{filtersModel>Key}" text="{filtersModel>Text}" />
              </ComboBox> 
            </fb:control>
            </fb:FilterGroupItem> -->
            <fb:FilterGroupItem
                    name="Cliente"
                    label="Cliente"
                    groupName="Group1"
                    visibleInFilterBar="true"
                >
                    <fb:control>
                    <Input/>
                    </fb:control>
                </fb:FilterGroupItem>

            <fb:FilterGroupItem
                    name="Materiale"
                    label="Materiale"
                    groupName="Group1"
                    visibleInFilterBar="true"
                >
                    <fb:control>
                    <Input/>
                    </fb:control>
                </fb:FilterGroupItem>
                
                 <fb:FilterGroupItem
                    name="Reason"
                    label="Reason"
                    groupName="Group1"
                    visibleInFilterBar="true"
                >
                    <fb:control>
                       <Input/>
                    </fb:control>
                </fb:FilterGroupItem>
                
        </fb:filterGroupItems>
    </fb:FilterBar>
    <ui:TreeTable
    id="treetableCallOff"
    rows="{
      path: 'master3CO>/',
      parameters: {
        arrayNames: ['posizioni_testata']
      }
    }"
    
      selectionMode="None"
  >
    <ui:extension>
      <OverflowToolbar style="Clear">
        <Title />
        <ToolbarSpacer />
        <Button
          text="Espandi tutti"
          icon="sap-icon://expand-all"
          press="onExpandFirstLevel"
        />
        <Button
          icon="sap-icon://collapse-all"
          text="Collassa tutti"
          press="onCollapseAll"
        />
       
        <Button
          icon="sap-icon://sort"
          text="Ordinamento"
          press="sortCategories"
        />
       
      </OverflowToolbar>
    </ui:extension>
    <ui:columns>
					<ui:Column width="11rem">
						<Label text="Cliente" />
						<ui:template>
							<Text text="{master3CO>codice_terre_cliente}" wrapping="false" />
						</ui:template>
					</ui:Column>
          <ui:Column width="7rem">
						<Label text="N. progr. invio" />
						<ui:template>
							<Text text="{master3CO>progressivo_invio}" wrapping="false" />
						</ui:template>
					</ui:Column>
          <ui:Column width="11rem">
						<Label text="Data Ricezione" />
						<ui:template>
							<DatePicker
            editable="false"
            visible="{= ${master3CO>data_ricezione} ? true : false}"
            value="{
              path: 'master3>data_ricezione',
              type: 'sap.ui.model.type.Date',
              formatOptions: {
                pattern: 'dd/MM/yyyy'
              }
            }"
            valueFormat="dd/MM/yyyy"
            displayFormat="dd/MM/yyyy"
          />
						</ui:template>
					</ui:Column>
         
          <ui:Column width="9rem">
						<Label text="Materiale Fornitore" />
						<ui:template>
							<Text text="{master3CO>posizione_6_28}" wrapping="false" />
						</ui:template>
					</ui:Column>
          <ui:Column width="9rem">
						<Label text="Reason" />
						<ui:template>
							<Text text="{master3CO>posizione_43_44}" wrapping="false" />
						</ui:template>
					</ui:Column>
          <ui:Column width="11rem">
						<Label text="DDT" />
						<ui:template>
							<Text text="{master3CO>posizione_6_13}" wrapping="false" />
						</ui:template>
					</ui:Column>
          <ui:Column width="6rem">
						<Label text="Num IDoc" />
						<ui:template>
							<Text text="{master3CO>numero_idoc}" wrapping="false" />
						</ui:template>
					</ui:Column>
                    
          <ui:Column width="14rem">
						<Label text="Ordine Emissione Spedizione" />
						<ui:template>
							<Text text="{master3CO>ordine_vendita}" wrapping="false" />
						</ui:template>
					</ui:Column>
          <ui:Column width="4rem" hAlign="Center">
						<Label text="Stato" />
						<ui:template>
							<Button
                icon="{= ${master3CO>Stato} === 'OK' ? 'sap-icon://accept' : ${master3>Stato} === 'KO' ? 'sap-icon://decline' : 'sap-icon://warning'}"
                type="{= ${master3CO>Stato} === 'OK' ? 'Accept' : ${master3>Stato} === 'KO' ? 'Negative' : 'Critical'}"
                tooltip="{master3CO>Stato}"
                press="statoButtonPress"
            />
						</ui:template>
					</ui:Column>
          
          <ui:Column width="11rem">

						<ui:template>
              <HBox >
              <Button
              icon="sap-icon://display"
              type="Emphasized"
              press="dettaglioNav"
              visible="{= ${master3CO>codice_terre_cliente}? true : false }"
              />
						<Button
              icon="sap-icon://download"
              tooltip="Dowload file edi"
              visible="{= ${master3CO>codice_terre_cliente}? false : true }"
              class="sapUiTinyMarginBegin"
              press="downloadEdi"          
            />
          </HBox>
						</ui:template>
					</ui:Column>
				
				</ui:columns>
  </ui:TreeTable>
   
</core:FragmentDefinition>
