<core:FragmentDefinition
xmlns:unified="sap.ui.unified"
xmlns="sap.m"
xmlns:core="sap.ui.core"
>
<Dialog title="Gestione Template Manuale" draggable="true" resizable="true">
    <content>
        <VBox class="sapUiSmallMarginTop sapUiResponsiveContentPadding" backgroundDesign="Solid">
            <HBox class="sapUiSmallMarginTopBottom sapUiSmallMarginBegin">
                <Button
                    type="Emphasized"
                    icon="sap-icon://download"
                    text="Esporta Template Manuale"
                />
            </HBox>
            <HBox class="sapUiMediumMarginBottom sapUiSmallMarginBegin">
                <unified:FileUploader width="350px" fileType="['xls','xlsx']" />
                <Button
                    type="Emphasized"
                    icon="sap-icon://upload"
                    text="Upload"
                    class="sapUiSmallMarginBeginEnd"
                    press="onUploadButtonPress"
                />
            </HBox>
        </VBox>
    </content>
    <beginButton>
        <Button text="Chiudi" press="onClose"/>
    </beginButton>
</Dialog>
</core:FragmentDefinition>
