<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.f"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns:ui="sap.ui.table"
  xmlns:mvc="sap.ui.core.mvc"
>
  <fb:FilterBar

    useToolbar="false"
    search=".onSearchData"
    showFilterConfiguration="false"
    showGoOnFB="true"
    showClearOnFB="true"
    clear="onFilterBarClear"
    filterContainerWidth="10rem"
    class="sapUiSmallMarginBottom"
  >
    <fb:filterGroupItems>
      <fb:FilterGroupItem
        name="Num iDoc"
        label="Num iDoc"
        groupName="gr1"
        visibleInFilterBar="true"
      >
        <fb:control>
          <ComboBox
            items="{filtersModel>/desadv/numiDoc/items}"
            value="{filtersModel>/desadv/numiDoc/value}"
          >
            <core:ListItem
              key="{filtersModel>Key}"
              text="{filtersModel>Text}"
            />
          </ComboBox>
        </fb:control>
      </fb:FilterGroupItem>
      <fb:FilterGroupItem
        name="Num Consegna"
        label="Num Consegna"
        groupName="gr1"
        visibleInFilterBar="true"
      >
        <fb:control>
          <ComboBox
            items="{filtersModel>/desadv/numConsegna/items}"
            value="{filtersModel>/desadv/numConsegna/value}"
          >
            <core:ListItem
              key="{filtersModel>Key}"
              text="{filtersModel>Text}"
            />
          </ComboBox>
        </fb:control>
      </fb:FilterGroupItem>
      <!-- <fb:FilterGroupItem
        name="Data DDT"
        label="Data DDT"
        groupName="gr1"
        visibleInFilterBar="true"
      >
        <fb:control>
          <DatePicker
            tooltip="Data DDT"
            secondaryCalendarType="Gregorian"
            change="handleChange"
            value="{filtersModel>/desadv/dataDDT}"
            valueFormat="dd/MM/yyyy"
            displayFormat="dd/MM/yyyy"
          />
        </fb:control>
      </fb:FilterGroupItem> -->
      <fb:FilterGroupItem
        name="Num DDT Cliente"
        label="Num DDT Cliente"
        groupName="gr1"
        visibleInFilterBar="true"
      >
        <fb:control>
          <ComboBox
            items="{filtersModel>/desadv/numDDTCliente/items}"
            value="{filtersModel>/desadv/numDDTCliente/value}"
          >
            <core:ListItem
              key="{filtersModel>Key}"
              text="{filtersModel>Text}"
            />
          </ComboBox>
        </fb:control>
      </fb:FilterGroupItem>
      <fb:FilterGroupItem
        name="BP"
        label="BP"
        groupName="gr1"
        visibleInFilterBar="true"
      >
        <fb:control>
          <ComboBox
            items="{filtersModel>/desadv/bp/items}"
            value="{filtersModel>/desadv/bp/value}"
          >
            <core:ListItem
              key="{filtersModel>Key}"
              text="{filtersModel>Text}"
            />
          </ComboBox>
        </fb:control>
      </fb:FilterGroupItem>
      <fb:FilterGroupItem
        name="Data Creazione Doc"
        label="Data Creazione Doc"
        groupName="gr1"
        visibleInFilterBar="true"
      >
        <fb:control>
          <DatePicker
            tooltip="Data Creazione Doc"
            value="{filtersModel>/desadv/dataCreaDoc}"
            secondaryCalendarType="Gregorian"
            change="handleChange"
            valueFormat="dd/MM/yyyy"
            displayFormat="dd/MM/yyyy"
          />
        </fb:control>
      </fb:FilterGroupItem>
    </fb:filterGroupItems>
  </fb:FilterBar>
  <ui:Table
    id= "tableDes"
    rows="{master3DesAdv>/}"
    selectionMode="{=${datiAppoggio>/currentPage} === 'archivio' ? 'Single':'MultiToggle'}"
    ariaLabelledBy="title"
  >
    <ui:extension>
      <OverflowToolbar style="Clear">
        <ToolbarSpacer />
        <Button
        icon="sap-icon://sort"
        text="Ordinamento"
        press="sortCategories"
      />
      
      <Button
        text="Esporta excel"
        icon="sap-icon://excel-attachment"
        press="downloadExcelFile"
      
      />
        <Button
          text="Archivia"
          icon="sap-icon://bbyd-active-sales"
          press="moveToArchive"
          type="Emphasized"
          visible="{=${datiAppoggio>/currentPage} === 'archivio' ? false:true}"
        />
      </OverflowToolbar>
    </ui:extension>
    <ui:columns>
      <ui:Column >
        <Label text="Num iDoc" />
        <ui:template>
          <Text
            text="{master3DesAdv>numero_idoc}"
            wrapping="false"
          />
        </ui:template>
      </ui:Column>
      <ui:Column >
        <Label text="Data Creazione Doc" />
        <ui:template>
          <DatePicker
          editable="false"
          value="{
            path: 'master3DesAdv>data_creazione_documento',
            type: 'sap.ui.model.type.Date',
            formatOptions: {
              pattern: 'dd/MM/yyyy'
            }
          }"
          valueFormat="dd/MM/yyyy"
          displayFormat="dd/MM/yyyy"
        />
        </ui:template>
      </ui:Column>
      <ui:Column >
        <Label text="Num. Consegna" />
        <ui:template>
          <Text
          text="{master3DesAdv>numero_consegna}"
            wrapping="false"
          />
        </ui:template>
      </ui:Column>
      <!-- <ui:Column width="11rem">
        <Label text="Data DDT" />
        <ui:template>
          <DatePicker
          editable="false"
          value="{
            path: 'master3DesAdv>data_creazione_documento',
            type: 'sap.ui.model.type.Date',
            formatOptions: {
              pattern: 'dd/MM/yyyy'
            }
          }"
          valueFormat="dd/MM/yyyy"
          displayFormat="dd/MM/yyyy"
        />
        </ui:template>
      </ui:Column> -->
      <ui:Column >
        <Label text="Num. DDT" />
        <ui:template>
          <Text
          text="{master3DesAdv>numero_ddt}"
            wrapping="false"
          />
        </ui:template>
      </ui:Column>
      <ui:Column>
        <Label text="Committente" />
        <ui:template>
          <Text
          text="{master3DesAdv>numero_bp_ship_to}"
            wrapping="false"
          />
        </ui:template>
      </ui:Column>
      <ui:Column >
        <Label text="Destinatario" />
        <ui:template>
          <Text
          text="{master3DesAdv>numero_bp_sold_to}"
            wrapping="false"
          />
        </ui:template>
      </ui:Column>
      
      <!-- <ui:Column width="11rem">
        <Label text="Stato" />
        <ui:template>
          <Text
            text="{Name}"
            wrapping="false"
          />
        </ui:template>
      </ui:Column> -->
      <ui:Column >
        <ui:template>
        </ui:template>
      </ui:Column>
    </ui:columns>
  </ui:Table>
</core:FragmentDefinition>